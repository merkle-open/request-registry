{
	"compilerOptions": {
		"target": "es5",
		"module": "ESNext",
		"lib": ["dom", "esnext"],
		"declaration": true,
		"sourceMap": true,
		"rootDir": "./src/",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"*": ["node_modules/*"]
		},
		"jsx": "react",
		"esModuleInterop": true
	},
	"include": ["src", "types"]
}
